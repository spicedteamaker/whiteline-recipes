<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-sm-3">
          <h3><%= link_to "#{recipe.title}", recipe %></h3>
          <% if recipe.picture.attached? %>
            <%= image_tag recipe.picture, size: "250x250" %>
          <% end %>
          <!--<%= link_to 'Edit', edit_recipe_path(recipe) %>-->
        </div>
      <% end %>
      <br>
  </div>
</div>
