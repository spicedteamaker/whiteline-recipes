<% @addedInstructions.each do |i| %>
  <%= i.body %>
  <%= link_to "Delete", [@recipe, i], method: :delete, data: {confirm: "Are you sure?"} %>
  <br>
<% end %>
<%= form_with(model: @instruction, url: [@recipe, @instruction], local: true) do |form| %>
  <%= form.text_area :body %>
  <%= form.submit "Add Instruction" %>
<% end %>
