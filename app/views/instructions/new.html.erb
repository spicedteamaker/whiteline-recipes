<% unless @addedInstructions.nil? %>
  <% @addedInstructions.each do |i| %>
    <%= i.body %>
    <br>
  <% end %>
<% end %>

<%= form_with(model: @instruction, local: true) do |form| %>
  <%= form.text_area :body %>
  <%= @recipe.id %>
  <%= hidden_field_tag(:recipe, @recipe.id) %>
  <%= form.submit "Add Instruction" %>
<% end %>
